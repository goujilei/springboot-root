<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.e    xample.springboot_test.mapper.JobLogMapper">

    <resultMap id="JobLogMap" type="com.example.springboot_test.entity.JobLog">
        <id     property="id"         column="id"/>
        <result property="jobId"      column="job_id"/>
        <result property="jobName"    column="job_name"/>
        <result property="startTime"  column="start_time"/>
        <result property="endTime"    column="end_time"/>
        <result property="status"     column="status"/>
        <result property="message"    column="message"/>
        <result property="resultJson" column="result_json"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.springboot_test.entity.JobLog">
        INSERT INTO job_log
        (id, job_id, job_name, start_time, end_time, status, message, result_json)
        VALUES
            (#{id}, #{jobId}, #{jobName}, #{startTime}, #{endTime}, #{status}, #{message}, #{resultJson})
    </insert>

    <select id="selectByCondition" resultMap="JobLogMap">
        SELECT * FROM job_log
        <where>
            <if test="jobName != null and jobName != ''">
                AND job_name LIKE CONCAT('%', #{jobName}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY start_time DESC
    </select>
</mapper>
